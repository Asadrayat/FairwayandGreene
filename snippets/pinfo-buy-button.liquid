<style>
    button.notify-stock-button-x {
        margin: 0 0 8px;
          @media screen and (max-width: 1249px){
              margin: 0;
          }
    }
    .pdp__shipping__wrap {
        display: flex;
        gap: 12px;
        justify-content: center;
        align-items: center;
        margin: 12px 0 0 0;
        flex-wrap: wrap;
        border: 1px solid grey;
        padding: 12px 6px;
        @media(width < 1200px){
          justify-content: center;
          padding: 8px 6px;
          gap: 8px;
        }
        svg{
          @media(width < 1200px){
            width: 16px;
            height: 16px;
          }       
        }
    }
    p.freeshipping__note_pdp {
        color: #1f2937;
        font-family: "Aktiv Grotesk";
        font-size: var(--Font-Size-Paragraph-Tiny, 12px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Tiny, 16px);
        margin: 0 0 0 0;
        text-align: center;
    }
    .pinfo-form-wrapper {
      width: 100%;
    }
    .pinfo-form-wrapper form{
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    .notify-stock-button-x,
    .pinfo-add-to-cart{
      color: #FFF;
      text-align: center;
      font-family: "Aktiv Grotesk";
      font-size: 13px;
      font-style: normal;
      font-weight: 400;
      line-height: 100%; /* 100% */
      text-transform: uppercase;
      box-sizing: border-box;
      border: 0;
      width: 100%;
      cursor: pointer;

      border-radius: var(--rounded-none, 0px);
      {% comment %} background: #004027; {% endcomment %}
        background: linear-gradient(90deg, #010D05 0%, #132D1B 100%);

      display: flex;
      padding: var(--Spacing-Container-sm, 12px) var(--Spacing-Container-lg, 32px);
      justify-content: center;
      align-items: center;
      gap: 8px;
      align-self: stretch;
      border: 1px solid #004027;
      transition: all 0.4s;
      @media(max-width: 768px) {
        padding-block: 15px;
      }
    }
    .notify-stock-button-x:hover,
    .pinfo-add-to-cart:hover {
      border-radius: var(--rounded-none, 0px);
      background: #fff;
      color: #004027;
    }
    .pinfo-add-to-cart:disabled{
      opacity: .7;
    }

    .p-info-btn-buy-now{
      p{
        margin: 0;
        color: #000;
        font-family: var(--font-family-Body, Archivo);
        font-size: var(--Font-Size-Paragraph-Tiny, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Tiny, 20px); /* 142.857% */
        text-align: center;
        @media(max-width: 768px) {
          font-size: 12px;
        }
      }
      p strong{
        color: #004027;
        font-weight: 900;
      }
      margin-top:  var(--Spacing-Container-xxs, 8px);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      flex-wrap: wrap;
      svg {
        max-width: 60px;
      }
    }

  a.pqv--view-details.button {
      color: #101116;
      width: max-content;
      margin: auto;
      font-size: 12px;
      display: none;
      text-transform: uppercase;
  }
  .pqv-container   a.pqv--view-details.button {
      display: block !important;
  }
</style>

{% liquid
  for option in product.options_with_values
    if option.name == 'Size' or option.name == 'size'
      for value in option.values
        if value.selected
          assign selected_size = value
        endif
      endfor
    endif
  endfor
%}

<div class="pinfo-form-wrapper">
    {% render 'custom-inventory-message', product: product %}
    {% render 'model-info', product: product %}
    {% render 'viewer-count', block: block %}

  {% comment %} {% render 'custom-inventory-message', product: product %} {% endcomment %}
  <div class="pdp-form-btns">
    {% unless product.selected_or_first_available_variant.available %}
      <button
        class="notify-stock-button-x "
        type=""
      >
        Notify Me
      </button>
    {% endunless %}
    {% if product.selected_or_first_available_variant.available %}
      {% form 'product', product %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <input type="hidden" name="quantity" value="1">
        {% if product.tags contains 'embroider' %}
          <input type="hidden" name="properties[Embroider Status]" value="Embroidered Product" />
          <input type="hidden" name="attributes[embroidery_status]" value="embroidered" />
          
        {% endif %}
         
        <button
          {% unless product.selected_or_first_available_variant.available %}
            disabled
          {% endunless %}
          class="pinfo-add-to-cart {% unless product.selected_or_first_available_variant.available %} hidden  {% endunless %}"
          type="submit"
        >
          {% if product.selected_or_first_available_variant.available %}
            Add to cart - {{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}
          {% else %}
            <b>{{ selected_size.name }}</b> Sold Out
          {% endif %}
        </button>
      {% endform %}
    {% endif %}
      <div class="header__drawer-container">
        <a class="glass__bg- header-icon lg-hide mobile-drawer-open pos-rel" mobile-drawer-opener href="#">
          <div class="burger__icon">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </a>
      </div>
  </div>
  <div class="pdp-form-outer">
