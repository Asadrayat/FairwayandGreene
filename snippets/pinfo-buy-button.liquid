    {% if product.selected_or_first_available_variant.price >= 15000 %}
      <p class="freeshipping__note_pdp">This product is eligible for free shipping.</p>
    {% endif %}
     {% unless product.tags contains 'embroider' %}
      <p class="--delivery-message">Get Delivery By <span class="--delivery-date">Jun 26 - Jun 29</span></p>
      {% endunless %}

    
    </div>

    {% comment %} {% render 'viewer-count', block: block %} {% endcomment %}
    
