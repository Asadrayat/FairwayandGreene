<style>
  .--collection-promotion-card-wrapper {
    background: transparent;
    position: relative;
    width: 100%;
    height: 100%;
    .--promotion-card-image-wrapper {
        line-height: 0;
        height: 100%;
        position: relative;
        /* width: inherit; 
        height: inherit; */
        &::after {
          position: absolute;
          content: "";
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: linear-gradient(180deg, rgba(0, 0, 0, 0.00) 51.13%, #004027 100%), url(<path-to-image>) transparent 50% / cover no-repeat;
        }
        img {
          {% comment %} display: block;
          width: 100%;
          height: auto;
          aspect-ratio: 173/236;
          object-fit: cover; {% endcomment %}
          display: block;
          width: 100%;
          height: auto;
          object-fit: cover;
          height: 100%;          
        }
    }
    .--promotion-card-content-wrapper{{ uniq | prepend:"." }} {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 25px 35px;
        display: flex;
        align-items: flex-end;    
        @media(max-width: 768px){
          padding: 15px; 
        }        

        {% comment %}
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        {% if collection_promotion_card.content_position == "Top" %}
          align-items: flex-start;
        {% elsif collection_promotion_card.content_position == "Middle" %}
          align-items: center;
        {% elsif collection_promotion_card.content_position == "Bottom" %}
          align-items: flex-end;
        {% endif %}
        {% endcomment %}
    }
    .--promotion-card-title{
      font-size: var(--Font-Size-Heading-H2);
      line-height: var(--Line-Height-Heading-H2);
      letter-spacing: 0;
      margin: 0 0 8px !important;
      color: #fff
    }
    .--promotion-card-content{
      font-size: var(--Font-Size-Paragraph-Regular);
      line-height: var(--Line-Height-Paragraph-Regular);
      color: #fff;
      letter-spacing: 0.4px;
      font-family: var(--font-body-family);
    }
    .--promotion-card-content-wrapper{{ uniq | prepend:"." }} .--promotion-card-title ,
    .--promotion-card-content-wrapper{{ uniq | prepend:"." }} .--promotion-card-content {
        margin-block: 0;
        /* color: {{ collection_promotion_card.content_color }}; */
        color: #fff
    }
    .banner--btn {
        display: block;
        margin-block: 5px;
        color: #fff;
        text-decoration: unset;
        padding: 10px 0;
        line-height: 1;
        width: max-content;
        font-size: 18px;
        text-transform: uppercase;
        transition: all .4s ease-in;
        /* background: #004027; */
        @media(max-width: 768px){
           padding: 8px 12px;
          font-size: 15px;
        }
    }
  }
</style>

<div class="--collection-promotion-card-wrapper">
  {% if collection_promotion_card.url %}
    <a class="absolute-link" href="{{ collection_promotion_card.url }}"></a>
  {% endif %}
  <div class="--promotion-card-image-wrapper">
    {% if collection_promotion_card.image != blank %}
      <img src="{{ collection_promotion_card.image | image_url: width: 500 }}">
    {% endif %}
  </div>
  <div class="--promotion-card-content-wrapper {{ uniq }}">
    <div class="--promotion-card-content-block">
      <h2 class="--promotion-card-title">{{ collection_promotion_card.title }}</h2>
      <p class="--promotion-card-content">{{ collection_promotion_card.content }}</p>
      {% if collection_promotion_card.url and collection_promotion_card.button_label %}
        <a class="banner--btn button" href="{{ collection_promotion_card.url }}">
          {{- collection_promotion_card.button_label -}}
        </a>
      {% endif %}
    </div>
  </div>
</div>
