<pinfo-variant-picker>
  {% for option in product.options_with_values %}
    <div class="pinfo-variants-options {% if option.name == 'Color' or option.name == 'color' %}color-variant{% else %}others-variant{% endif %}">
      <div class="pinfo-option-label-wrapper">
        <p class="pinfo-filter-label">
          {{ option.name }}:
          {% if option.selected_value == 'SML' %}
            S
          {% elsif option.selected_value == 'MED' %}
            M
          {% elsif option.selected_value == 'LRG' %}
            L
          {% elsif option.selected_value == 'XLG' %}
            XL
          {% else %}
            {{ option.selected_value }}
          {% endif %}
        </p>
        {% if option.name == 'Size' or option.name == 'size' %}
          <div class="pinfo-size-guide openPopup">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
