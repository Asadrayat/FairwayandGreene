            </svg>
            <span>Size Guide</span>
          </div>
        {% endif %}
      </div>
      <div class="pinfo-options-values-wrapper {% if option.name == 'Color' or option.name == 'color' %}color-options{% else %}others-options{% endif %} {% if option.name == 'Size' or option.name == 'size' %}--size-option{% endif %}">
        {% comment %} {% if option.name == 'Color' or option.name == 'color' %}
          <div class="swiper">
            <div class="swiper-wrapper">
        {% endif %} {% endcomment %}
        {% for value in option.values %}
          {% if value.variant.available %}{% endif %}
            {% comment %} {% if option.name == 'Color' or option.name == 'color' %}
              <div class="swiper-slide">
            {% endif %} {% endcomment %}
            {% if value.variant.available %}{% endif %}
              <div class="pinfo-option-value">
                <input
                  {% if value.selected %}
                    checked
                  {% endif %}
                  {% unless value.available %}
                    disabled-
                  {% endunless %}
                  class="hidden  {% if option.name == 'Color' or option.name == 'color' %}color__variant__btn{% endif %}"
                  id="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
                  type="radio"
                  name="{{ option.name }}"
                  data-variant-url="{{ value.variant.url }}"
                  value="{{ value.name }}"
                >
                {% if option.name == 'Color' or option.name == 'color' %}
                  <label
                    class="{% unless  value.available %}disabled{% endunless %}"
                    for="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
                  >
                    {% if value.variant.featured_media == blank %}
                      {% liquid
                        assign color_img = value.name | downcase | strip | replace: ' ', '-' | replace: '/', '-' | append: '.png'
                      %}
                      {% comment %}
                      {% assign swatch_image = blank %}
                      {% for variant in product.variants %}
                        {% if variant.option1 == value.name and variant.featured_image %}
                          {% assign swatch_image = variant.featured_image %}
                          {% break %}
                        {% endif %}
                      {% endfor %}
                      {% if swatch_image != blank %}
                        {{ swatch_image | image_url: width: 100 | image_tag  }}
                      {% else %}
                        {{ color_img | file_img_url: '100x' | img_tag }}
                       {% endif %}
                       
                         
                       {% endcomment %}
                       {{ color_img | file_img_url: '100x' | img_tag }}
                    {% else %}
                      
                      {{ value.variant.featured_media | image_url: width: 100 | image_tag }}
                    {% endif %}
                  </label>
                {% else %}
                  <label
                    class="{% unless  value.available %}disabled{% endunless %}"
                    for="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
                  >
                    {% if value.available %}
                      {% if value.name == 'SML' %}
                        S
                      {% elsif value.name == 'MED' %}
                        M
                      {% elsif value.name == 'LRG' %}
                        L
                      {% elsif value.name == 'XLG' %}
                        XL
                      {% else %}
                        {{ value.name }}
                      {% endif %}
                      <!-- {{ value.name }} -->
                    {% else %}
                      <s>
                        {%- if value.name == 'SML' %}
                          S
                        {% elsif value.name == 'MED' %}
                          M
                        {% elsif value.name == 'LRG' %}
                          L
                        {% elsif value.name == 'XLG' %}
                          XL
                        {% else %}
                          {{ value.name }}
                        {% endif -%}
                      </s>
                    {% endif %}
                  </label>
                {% endif %}
              </div>
            {% comment %} {% if option.name == 'Color' or option.name == 'color' %}
              </div>
            {% endif %} {% endcomment %}
          
        {% endfor %}
        {% comment %} {% if option.name == 'Color' or option.name == 'color' %}
            </div>
          </div>
        {% endif %} {% endcomment %}
        {% comment %} {% if option.name == 'Color' or option.name == 'color' %}
          <div class="swiper-button-prev">
            <svg width="20px" height="20px" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 14L3 7.5L10 1" stroke="#000000" stroke-linecap="square"/>
            </svg>
          </div>
          <div class="swiper-button-next">
            <svg width="20px" height="20px" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 14L12 7.5L5 1" stroke="#000000" stroke-linecap="square"/>
            </svg>
          </div>
        {% endif %} {% endcomment %}
      </div>
    </div>
  {% endfor %}
</pinfo-variant-picker>
