<size-variant-picker data-update-url="true">
  {% for option in product.options_with_values %}
    {% if option.name == 'Size' or option.name == 'size' %}
      <div class="pinfo-size-v-wrapper">
        <p class="pinfo-filter-label">{{ option.name }}: {{ option.selected_value | upcase }}</p>
        {% if block.settings.size_guide %}
          <div class="pinfo-size-guide openPopup">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M12.0832 4.58328L13.3332 5.83328M9.58322 7.08328L10.8332 8.33328M7.08322 9.58328L8.33322 10.8333M4.58322 12.0833L5.83322 13.3333M2.13793 14.638L5.36178 17.8619C5.52679 18.0269 5.6093 18.1094 5.70443 18.1403C5.78812 18.1675 5.87826 18.1675 5.96195 18.1403C6.05708 18.1094 6.13959 18.0269 6.30459 17.8619L17.8618 6.30472C18.0268 6.13971 18.1093 6.05721 18.1402 5.96207C18.1674 5.87838 18.1674 5.78824 18.1402 5.70455C18.1093 5.60942 18.0268 5.52691 17.8618 5.36191L14.6379 2.13805C14.4729 1.97304 14.3904 1.89054 14.2953 1.85963C14.2116 1.83244 14.1215 1.83244 14.0378 1.85963C13.9426 1.89054 13.8601 1.97304 13.6951 2.13805L2.13793 13.6952C1.97292 13.8602 1.89042 13.9428 1.8595 14.0379C1.83231 14.1216 1.83231 14.2117 1.8595 14.2954C1.89042 14.3905 1.97292 14.473 2.13793 14.638Z" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Size Guide</span>
          </div>
        {% endif %}
      </div>
      <div class="pinfo-size-variants">
        {% for value in option.values %}
          <div class="pinfo-size-variant">
            <input
              {% if value.selected %}
                checked
              {% endif %}
              {% unless value.available %}
                disabled-
              {% endunless %}
              class="hidden"
              id="size-{{ value.id }}-{{ forloop.index }}"
              type="radio"
              name="size-variant"
              data-variant="{{ value.variant.id | json }}"
              data-url="{{ value.variant.url }}"
              value="{{ value.name }}"
            >
            <label
              class="{% unless  value.available %}disabled{% endunless %}"
              for="size-{{ value.id }}-{{ forloop.index }}"
            >
              {% if value.available %}
                {{ value.name }}
              {% else %}
                <s>{{ value.name }}</s>
              {% endif %}
            </label>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  {% endfor %}
</size-variant-picker>
