{% comment %}
for render this collection card need to pass the following things - 
    block: block  
{% endcomment %}
{% if block.type == 'collection' %}
  {% assign url = block.settings.collection.url %}
  {% assign image = block.settings.collection_image %}
  {% assign name = block.settings.collection_name %}
{% else %}
  {% assign url = block.settings.url %}
  {% assign image = block.settings.image %}
  {% assign name = block.settings.name %}
{% endif %}

<style>

  .card-content-wrapper.steps__showing{    
    flex-direction: column;
    gap: 12px;  
    align-items: start;
  }
  .collection-card-wrapper-{{ block.id }}{    
  .steps {
      color: var(--Content-Inverted-main, #F3F4F6);
      font-family: var(--font-family-Body, Archivo);
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 20px;
      letter-spacing: 0.96px;
      text-transform: uppercase;
      background: #004027;
      padding: 8px 24px;
      line-height: 118%;
  }    
    position: relative;
    .card-collection-link{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      cursor: pointer;
      display: block;   
    }
    .collection-media-img{
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 440 / 580;
    }
    .card-content-wrapper{
      position: absolute;
      left: 0;
      bottom: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: var(--Spacing-Container-md); 
      box-sizing: border-box;     
    }
    .card-title{
      color: var(--Content-Inverted-main, #F3F4F6);
      font-size: var(--Font-Size-Heading-H3, 24px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */
      letter-spacing: -0.48px;  
      margin: 0;
      @media(max-width: 768px){
        font-size: var(--Font-Size-Heading-H4, 18px);  
        line-height: var(--Line-Height-Heading-H4, 22px);
      }
    }
    /* .icon-wrapper{
      line-height: 0;  
      display: flex;
      padding: var(--Spacing-Container-xxs, 8px);
      justify-content: center;
      align-items: center;
      gap: 8px;
      border-radius: var(--rounded-3xl, 24px);
      border: 1px solid rgba(255, 255, 255, 0.40);
      background: rgba(255, 255, 255, 0.20);
    } */
  }
</style>
<div class="collection-card-wrapper-{{ block.id }} ">
  {% if url != null %}
    <a href="{{ url }}" class="card-collection-link"></a>
  {% endif %}
  <div class="media-wrapper">
    {% if image != null %}
      {{
        image
        | image_url: width: image.width
        | image_tag: class: 'collection-media-img'
      }}
    {% else %}
      {{ 'image' | placeholder_svg_tag }}
    {% endif %}
  </div>
  <div class="card-content-wrapper {% if section.settings.show_steps %}steps__showing{% endif %}">
    {% if section.settings.show_steps %}<div class="steps">steps {% if forloop.index < 10 %}0{% endif %}{{  forloop.index  }}</div>{% endif %}
    <h5 class="card-title">{{ name }}</h5>
