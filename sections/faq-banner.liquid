{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 3/1;
    object-position: top;
    @media(max-width: 768px) {
      aspect-ratio: 2/3;
      object-position: unset;
    }
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
  }
  .wrapper-{{ id }} .image-wrap.adaptive img {
    max-height: calc(100vh - 36px);
    @media(max-width: 1280px) {
      max-height: 100vh;
    }
    @media(max-width: 600px) {
      max-height: calc(100svh - 21px);
    }
  }
  .wrapper-{{ id }} .image-wrap.small_height img {
    height: auto;
    aspect-ratio: 3/1;
    @media(max-width: 600px) {
      aspect-ratio: 2/3;
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    padding-block: var(--Spacing-Container-xs);
    top: 0;
    left: 0;
    box-sizing: border-box;
    @media(max-width: 600px) {
      {% if section.settings.mobile_padding %}
        padding: var(--Spacing-Container-sm) var(--Spacing-Container-sm) 80px var(--Spacing-Container-sm);
      {% else %}
        padding: var(--Spacing-Container-sm) var(--Spacing-Container-sm);
      {% endif %}
    }
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }
  .wrapper-{{ id }} .content__info {
    display: flex;
    flex-direction: column;
  }
  .wrapper-{{ id }} .block__wrapper p.pretitle {
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Regular);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Small);
    letter-spacing: 0.96px;
    text-transform: uppercase;
    margin: 0 0 var(--Spacing-Container-sm) 0;
  }
  .wrapper-{{ id }} .block__wrapper h2 {
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1);
    letter-spacing: -0.48px;
    margin: 0 0 var(--Spacing-Container-sm) 0;
    em {
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: inline-block;
      }
    }
  }
  .wrapper-{{ id }} .block__wrapper h2.heading-medium {
    font-size: var(--Font-Size-Heading-H1);
  }
  .wrapper-{{ id }} .block__wrapper h2.heading-large {
    font-size: 96px;
    font-family: var(--font-family-Title);
    line-height: 83%;
    @media(max-width: 768px) {
      font-size: 64px;
    }
  }
  .wrapper-{{ id }} .block__wrapper p.subtitle {
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Medium);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Medium);
    margin: 0 0 16px 0;
    em {
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }
  }
  /* Tab styles */
  .wrapper-{{ id }} .tab-container {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
    justify-content: center;
    align-items: center;
  }
  .wrapper-{{ id }} .tab:before {
    content: unset;
  }
  .wrapper-{{ id }} .tab {
    text-transform: capitalize;
    border-radius: var(--rounded-none, 0px);
    background: #004027;
    border: 1px solid #004027;
    color: #fff;
    text-align: center;
    font-family: var(--font-family-Body, "Aktiv Grotesk");
    font-size: var(--Font-Size-UI-Controls-Control-Button-Small, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 16px);
    padding: 12px 14px;
    transition: all .4s ease-in-out;
    cursor: pointer;
    color: #004027;
    background: #fff;
  }
  .wrapper-{{ id }} .tab.active {
    background: #004027;
    border: 1px solid #004027;
    color: #fff;
  }
  .wrapper-{{ id }} .tab:hover {
    opacity: 0.8;
  }
  @media(max-width: 600px) {
    .wrapper-{{ id }} .tab-container {
      flex-wrap: wrap;
      gap: 8px;
    }
    /* .wrapper-{{ id }} .tab {
      font-size: var(--Font-Size-Paragraph-Tiny);
      padding: 6px 12px;
    } */
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }} belongsToNav" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% assign image = block.settings.image %}
        {% assign image_mobile = block.settings.image_mobile %}
        {% assign pretitle = block.settings.pretitle %}
        {% assign title = block.settings.title %}
        {% assign subtitle = block.settings.subtitle %}
        {% assign button_label_primary = block.settings.btn_label1 %}
        {% assign button_url_primary = block.settings.btn_url1 %}
        {% assign button_label_secondary = block.settings.btn_label2 %}
        {% assign button_url_secondary = block.settings.btn_url2 %}
        {% assign button_label_tertiary = block.settings.btn_label3 %}
        {% assign button_url_tertiary = block.settings.btn_url3 %}
        <div class="swiper-slide">
          {% render 'hero-slider-style', block: block, section: section %}
          <div class="block__wrapper block__wrapper-{{ section.id }}-{{ block.id }}">
            {% if image %}
              <div class="image-wrap {{ section.settings.banner_height }} small-hide">
                {{ image | image_url: width: image.width | image_tag }}
              </div>
            {% else %}
              <div class="image-wrap {{ section.settings.banner_height }} small-hide">
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            {% if image_mobile %}
              <div class="image-wrap large-up-hide medium-hide {{ section.settings.banner_height }}">
                {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
              </div>
            {% else %}
              <div class="large-up-hide medium-hide">
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            <div class="content__wrapper page-width">
              <div class="content {{ block.settings.content_position }} mobile-{{ block.settings.content_position_m }}">
                <div class="content__info">
                  {% if pretitle != blank %}
                    <p class="pretitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}" style="color: {{ block.settings.color__info }};">
                      {{ pretitle }}
                    </p>
                  {% endif %}
                  {% if title != blank %}
                    <h2 class="info-{{ block.id }} heading-{{ block.settings.heading_size }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }} {% if subtitle == blank %}mb-0{% endif %}" style="color: {{ block.settings.color__info }};">
                      {{ title }}
                    </h2>
                  {% endif %}
                  {% if subtitle != blank %}
                    <p class="subtitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}" style="color: {{ block.settings.color__info }};">
                      {{ subtitle }}
                    </p>
                  {% endif %}
                  <!-- Add category tabs -->
                  <div class="tab-container">
                    <!-- Tabs will be populated by JavaScript -->
                  </div>
                  {% if button_label_primary != blank or button_label_secondary != blank or button_label_tertiary != blank %}
                    <div class="btn__wrapper justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                      {% if button_label_primary != blank %}
                        <a class="button" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                      {% endif %}
                      {% if button_label_secondary != blank %}
                        <a class="button" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                      {% endif %}
                      {% if button_label_tertiary != blank %}
                        <a class="button" href="{{ button_url_tertiary }}">{{ button_label_tertiary }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Find FAQ section data
    const faqSectionData = window.FAQCategories ? window.FAQCategories[0] : null;
    if (!faqSectionData) {
      console.warn('FAQ section categories not found.');
      return;
    }

    const sectionId = faqSectionData.sectionId;
    const categories = faqSectionData.categories;
    const tabContainer = document.querySelector('.wrapper-{{ id }} .tab-container');

    // Populate tabs
    categories.forEach((category, index) => {
      const tab = document.createElement('button');
      tab.className = `tab ${index === 0 ? 'active' : ''}`;
      tab.setAttribute('data-category', category.handle);
      tab.textContent = category.title;
      tabContainer.appendChild(tab);
    });

    // Attach click handlers
    const tabs = document.querySelectorAll('.wrapper-{{ id }} .tab');
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Sync all tabs with the same data-category
        document.querySelectorAll(`.tab[data-category="${tab.getAttribute('data-category')}"]`).forEach(t => {
          t.classList.add('active');
        });
        document.querySelectorAll('.tab').forEach(t => {
          if (t.getAttribute('data-category') !== tab.getAttribute('data-category')) {
            t.classList.remove('active');
          }
        });

        // Trigger FAQ section filtering
        const faqSection = window.FAQSection && window.FAQSection[sectionId];
        if (faqSection) {
          const category = tab.getAttribute('data-category');
          faqSection.updateSubtabVisibility(category);
          const subtabs = document.querySelectorAll(`.wrapper-${sectionId} .subtab`);
          const relevantSubtabs = Array.from(subtabs).filter(s => s.getAttribute('data-parent-category') === category);
          if (relevantSubtabs.length > 0) {
            const allSubtab = relevantSubtabs.find(s => s.getAttribute('data-subcategory') === 'all') || relevantSubtabs[0];
            allSubtab.classList.add('active');
            faqSection.filterFAQs(category, allSubtab.getAttribute('data-subcategory'));
          } else {
            faqSection.filterFAQs(category);
          }
        } else {
          console.warn('FAQ section not found for ID:', sectionId);
        }
      });
    });
  });
</script>

