<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper">
              {% unless block.settings.image == blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endunless %}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h2 class="--title">{{ block.settings.title }}</h2>
              {% unless block.settings.pretitle == blank %}
                <p class="pretitle">{{ block.settings.pretitle }}</p>
              {% endunless %}
              <div class="--content">{{ block.settings.content }}</div>
              {% if block.settings.product or block.settings.product1 %}
                {% assign product1 = block.settings.product %}
                {% assign product2 = block.settings.product1 %}
                <div class="product__wrapper">
                  <div class="pd__block">
                    {% comment %}
                      <a class="absolute_link" href="{{ product1.url }}"></a>
                    {% endcomment %}
                    
                    <div class="pd_image__wrap">
                      {% if block.settings.cm1 %}
                        {{- block.settings.cm1 | image_url: width: block.settings.cm1.width | image_tag -}}
                      {% else %}
                        {% if product1.featured_image -%}
                          {{- product1.featured_image | image_url: width: product1.featured_image.width | image_tag -}}
                        {%- else -%}
                          {{- 'product-1' | placeholder_svg_tag -}}
                        {%- endif %}
                      {% endif %}
                    </div>
                    <p class="pd__title">{{ product1.title }}</p>
                    {% unless block.settings.btn_label == blank %}
                      <a class="button outlined" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
                    {% endunless %}
                  </div>
                  <div class="pd__block">
                    {% comment %}
                      <a class="absolute_link" href="{{ product1.url }}"></a>
                    {% endcomment %}
                    
                    <div class="pd_image__wrap">
                      {% if block.settings.cm2 %}
                        {{- block.settings.cm2 | image_url: width: block.settings.cm2.width | image_tag -}}
                      {% else %}
                        {% if product2.featured_image -%}
                          {{- product2.featured_image | image_url: width: product2.featured_image.width | image_tag -}}
                        {%- else -%}
                          {{- 'product-2' | placeholder_svg_tag -}}
                        {%- endif %}
                      {% endif %}
                    </div>
                    <p class="pd__title">{{ product2.title }}</p>
                    {% unless block.settings.btn_label1 == blank %}
                      <a class="button outlined" href="{{ block.settings.btn_url1 }}">
                        {{- block.settings.btn_label1 -}}
                      </a>
                    {% endunless %}
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

