{% liquid
  assign id = section.id
%}

<style>
        #shopify-section-{{id}} {
          box-sizing: border-box;
          margin-top: {{section.settings.margin_top | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
          padding-top: {{section.settings.padding_top | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
          .page-width {
            max-width: 1160px;
          }
          .button.outlined {
            margin: var(--Spacing-Container-sm) 0 0 0 ;
            width: 100%;
          }
          a.button.outlined {
                color: #FFF;
                text-align: center;
                font-family: "Aktiv Grotesk";
                font-size: 13px;
                font-style: normal;
                font-weight: 400;
                line-height: 100%;
                text-transform: uppercase;
                box-sizing: border-box;
                border: 0;
                width: 100%;
                cursor: pointer;
                border-radius: var(--rounded-none, 0px);
                background: #004027;
                display: flex;
                padding: var(--Spacing-Container-sm, 12px) var(--Spacing-Container-lg, 32px);
                justify-content: center;
                align-items: center;
                gap: 8px;
                align-self: stretch;
                border: 1px solid #004027;
                transition: all 0.4s;
                &:hover {
                border-radius: var(--rounded-none, 0px);
                background: #fff;
                color: #004027;                    
                }
            }     
            a.button.outlined::before, a.button.outlined::after {
             content: unset;
            }     
        }

        @media(max-width: 600px) {
          #shopify-section-{{id}} {
            margin-top: {{section.settings.margin_top_m | append: 'px'}};
            margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
            padding-top: {{section.settings.padding_top_m | append: 'px'}};
            padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
          }
        }

      .wrapper-{{ id }} {
          display: grid;
          grid-template-columns: repeat(2,1fr);
          align-items: center;
          @media(max-width: 600px) {
            grid-template-columns: 1fr;
            gap: var(--Spacing-Container-lg, 24px);
          }


      .--image-wrapper {
          line-height: 0;          
          @media(max-width: 600px) {
             /* grid-row: 1/2; */
           }
        img {
          width: 100%;
        {% if section.settings.image_size == 'adaptive' %}
          aspect-ratio: 2/3;
        {% endif %}
        }

      }

      .--text-block-container.--text-first {
          padding-right: var(--Spacing-Container-lg);
           @media(max-width: 600px) {
             padding-right: unset;
           }
      }
      .--text-block-container.--text-last {
          padding-left: var(--Spacing-Container-lg);
          @media(max-width: 600px) {
             padding-left: unset;
           }
      }
      .pretitle {
        color: #000;
        font-family: var(--font-family-Body, "Archivo Expanded");
        font-size: var(--Font-Size-Paragraph-Regular, 16px);
        font-style: normal;
        font-weight: 250;
        line-height: var(--Line-Height-Paragraph-Regular, 24px);
        text-transform: uppercase;
        padding-block: 0 var(--Spacing-Container-xs);
        margin: 0;
      }
      h2.--title {
          margin-block: 0 var(--Spacing-Container-xs);
      }

      .--content {
        margin-block: var(--Spacing-Container-sm) var(--Spacing-Container-lg);
      }
      .--content p{
        color: #000;

        /* Paragraph/S */
        font-family: var(--font-family-Body, "Aktiv Grotesk");
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
      }

        h3 {
            color: #000;

            /* UI Controls/Contextual/tagline/small */
            font-family: var(--font-family-Body, "Aktiv Grotesk");
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: 20px; /* 125% */
            letter-spacing: 0.96px;
            text-transform: uppercase;
        }
      }
      .--content * {
        margin: 0 0 8px;
      }

  .product__wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--Spacing-Container-sm);
      align-items: stretch; /* Ensure grid items stretch to equal height */
      @media(width < 1100px ) {
        grid-template-columns: 1fr ;
      }
  }

  .pd__block {
      position: relative;
      display: grid;
      grid-template-rows: 1fr auto ; /* Image takes available space, title takes natural height */
      height: 100%; /* Fill grid cell */
  }

  .pd_image__wrap {
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .pd_image__wrap img {
      aspect-ratio: 4 / 5;
      width: 100%;
      height: auto;
      object-fit: cover;
      @media( 600px < width < 1100px ) {
        max-width: 50%;
      }
  }

  p.pd__title {
      color: #1F2937;
      text-align: center;
      margin: 0 ;
      padding: 8px 0;
      display: flex;
      align-items: end;
      justify-content: center;
  }

  a.absolute_link {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      cursor: pointer;
  }

