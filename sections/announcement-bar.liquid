{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: linear-gradient(90deg, #010D05 0%, #132D1B 100%);
    
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      z-index: 2;
    }
  }

  .sec-{{ id }} .swiper-wrapper{
    -webkit-transition-timing-function:linear!important;
    transition-timing-function:linear!important;
    position: relative;
    justify-content: flex-start;
    max-width: 100%;
  }

  .sec-{{ id }} .swiper-slide {
    text-align: center;
    color: var(--Content-Inverted-main, #F3F4F6);
    font-family: var(--font-family-Body, "Neue Plak");
    font-size: var(--Font-Size-Paragraph-Tiny, 12px);
    line-height: var(--Line-Height-Paragraph-Tiny, 16px); /* 133.333% */
    text-transform: uppercase;
    width: auto;
    position: relative;
    padding: 0 40px;
    box-sizing: border-box;
    a{
      text-align: center;
      color: var(--Content-Inverted-main, #F3F4F6);
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Tiny, 12px);
      line-height: var(--Line-Height-Paragraph-Tiny, 16px); /* 133.333% */
      text-transform: uppercase;
      box-sizing: border-box; 
    }
  }
  .sec-{{ id }} .--nav-icon.swiper-button-disabled {
    background: inherit;
  }
  .sec-{{ id }} .--nav-icon{
    position: absolute;    
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;    
    color: #fff;
    cursor: pointer;
    background: transparent;
    path {
      stroke: #fff;
    }
  }
  .sec-{{ id }} .prev-{{ section.id }}{
    left: 0;    
    @media(width > 768px) {
      left: 12px;    
    }
  }
  .sec-{{ id }} .next-{{ section.id }}{
    right: 0;    
    @media(width > 768px) {
      right: 12px;    
    }    
  }

  @keyframes line-slide {
    0% {
      background-position: -5% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="swiper">
        {% if section.settings.announcement_type == 'marquee' %}
        <div class="swiper-wrapper">
          {% for i in (1..15) %}
            {% for block in section.blocks %}
              <div class="swiper-slide">
                {% if block.settings.title != blank %}
                  {{ block.settings.title }}
                {% endif %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
        {% else %}
        <div class="swiper-wrapper">
          {% for i in (1..15) %}
            {% for block in section.blocks %}
              <div class="swiper-slide">
                {% if block.settings.title != blank %}
                  {% if block.settings.link == blank %}
                  {{ block.settings.title }}
                  {% else %}
                    <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
                  {% endif %}
                {% endif %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
        <div class="prev-{{ section.id }} --nav-icon ">
          {% comment %}
            {% render 'all-icons', name: 'left_arrow' %}
          {% endcomment %}
          {% render 'all-icons', name: 'chevron_left' %}
        </div>
        <div class="next-{{ section.id }} --nav-icon ">
          {% render 'all-icons', name: 'chevron_right' %}
          {% comment %}
            {% render 'all-icons', name: 'right_arrow' %}
          {% endcomment %}
        </div>     
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper('.wrapper-{{ id }} .swiper', {
      {% if section.settings.announcement_type == 'marquee' %}
        spaceBetween: 50,
        centeredSlides: false,
        speed: 11000,
        autoplay: {
          delay: 1,
        },     
        spaceBetween: 50,
        slidesPerView:'auto',
        allowTouchMove: false,
        disableOnInteraction: true
        {% else %}
        slidesPerView: 1,   
        allowTouchMove: true,   
        autoplay: true,
        autoplay: {
          delay: 5000,
        },               
        navigation: {
          nextEl: '.next-{{ section.id }}',
          prevEl: '.prev-{{ section.id }}'
        }       
       {% endif %}
    });
  });
</script>

{% schema %}
{
  "name": "Announcment bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
