        },
        {
          "type": "text",
          "id": "newsletter_subheading",
          "label": "Newsletter Subheading",
          "default": "Receive 15% Off Your First Order"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Section"
    }
  ]
