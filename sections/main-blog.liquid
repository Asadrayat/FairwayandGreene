{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .wrapper-{{ id }} {
    width: 70%;
    margin: auto;
    min-width: 1050px;
    transform: translateY(-250px);
    margin-bottom: -250px;
    @media(max-width: 1200px) {
      min-width: 100%;
      width: 100%;
      transform: translateY(0px);
      margin-bottom: 0px;
    }
  }
  #shopify-section-{{id}} {
    .blog-articles-container{
      display: grid;
      grid-template-columns: repeat(2 , minmax(0,1fr));
      gap: var(--Spacing-Container-sm, 16px) var(--Spacing-Container-xxs, 8px);
      padding: var(--Spacing-Container-xs);
      background: #fff;
      @media(max-width: 600px){
        grid-template-columns: minmax(0,1fr);
        gap: var(--Spacing-Container-sm, 16px);
        padding: 0;
      }
    }
    .blog-articles__wrapper{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-xs);
      padding: 0;
    }
    .img-wrapper img{
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 1;
      border-radius: 0;
    }
    .top--container{
      display: flex;
      justify-content: space-between;
    }
    .tag-badge{
      color: var(--Content-Base-main, #1F2937);
      border-radius: 24px;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 20px; /* 125% */
      letter-spacing: 0.96px;
      text-transform: uppercase;
    }
    .circle-divider{
      color: var(--Content-Base-main, #1F2937);
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    }
    
    h3.card__heading_ {
         margin-block: 0 8px;
          @media(max-width: 600px) {
            margin-block: 4px 6px;
          }
    }
    .full-unstyled-link{
      color: var(--Content-Base-main, #1F2937);
      font-family: var(--font-family-Title, Krylon);
      font-size: var(--Font-Size-Heading-H4, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4, 24px);
      letter-spacing: -0.4px;
    }
    .article-card__excerpt{
      overflow: hidden;
      color: var(--Content-Base-main, #1F2937);
      text-overflow: ellipsis;
      font-family: var(--font-family-Body);
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px);
      margin-bottom: 0;
      @media(max-width: 600px) {
        font-size: var(--Font-Size-Paragraph-Small, 16px);
        line-height: var(--Line-Height-Paragraph-Small);
      }
    }
    .load_more {
      color: var(--Content-Base-main, #1F2937);
      text-align: center;
      justify-self: center;
      cursor: pointer;
      border: 0;
      /* UI Controls/Control/Button/Regular */
      font-family: var(--font-family-Body, "Aktiv Grotesk");
      font-size: var(--Font-Size-UI-Controls-Control-Button-Regular, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Regular, 20px); /* 100% */
      border-radius: var(--rounded-none, 0px);
      background: #EEEDF7;
      display: flex;
      padding: var(--Spacing-Container-xs, 12px) var(--Spacing-Container-lg, 32px);
      justify-content: center;
      align-items: center;
    }
  }
</style>
{% if blog.articles_count > 0 %}
<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="blog-articles-container">
        {%- for article in blog.articles -%}
          <div class="blog-articles__wrapper {% if forloop.index > section.settings.card_to_show %} hidden {% endif %}">
            <a href="{{ article.url }}" class="full-unstyled-link">
              <div class="img-wrapper">
                {% if article.image.src != null %}
                  {{ article.image.src | image_url: width: article.image.src.width | image_tag: class: 'blog-img' }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
            </a>

            <div class="card__content_">
              <div class="top--container">
                <div class="card__badge">
                  {% if section.settings.show_tags == true %}
                    {% for tag in article.tags %}
                      <span class="badge tag-badge">{{ tag }}</span>
                    {% endfor %}
                  {% endif %}
                </div>
                <div class="card__badge">
                  {% if section.settings.show_date == true %}
                    <span class="circle-divider">{{ article.published_at | time_tag: format: 'date' }}</span>
                  {% endif %}
                </div>
              </div>
              <div class="card__information_">
                <h3 class="card__heading_">
                  <a href="{{ article.url }}" class="full-unstyled-link">
                    {{ article.title | escape }}
                  </a>
                </h3>
                <div class="article-card__info caption-with-letter-spacing h5">
                  {% if section.settings.show_author == true %}
                    <span>{{ article.author }}</span>
                  {% endif %}
                </div>
                <div class="article-content-wrapper">
                  <p class="article-card__excerpt rte-width">
                    {{ article.content | strip_html | truncatewords: section.settings.words }}
                  </p>
                </div>
                <!--
                  <div class="article-card__footer">
                    {%- if article.comments_count > 0 and blog.comments_enabled? -%}
                      <span>{{ 'blogs.article.comments' | t: count: article.comments_count }}</span>
                    {%- endif -%}
                  </div>
                -->
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
    <button
      class="load_more {% if  blog.articles_count <= section.settings.card_to_show %}hidden{% endif %}"
      data-load-more
    >
      Load More
    </button>
  </div>
</div>
{% endif %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
      let articles = document.querySelectorAll(".blog-articles__wrapper");
      let loadMoreBtn = document.querySelector("[data-load-more]");
      let visibleCount = {{ section.settings.card_to_show }}; // Convert Liquid variable to number
      let increment = {{ section.settings.card_to_show }} ; // Number of articles to show per click

      // Hide articles beyond the visibleCount initially
      articles.forEach((article, index) => {
          if (index >= visibleCount) {
              article.classList.add("hidden");
          }
      });

      // Click event to load more articles
      loadMoreBtn.addEventListener("click", function () {
          let hiddenArticles = [...articles].filter(article => article.classList.contains("hidden"));

          for (let i = 0; i < increment && i < hiddenArticles.length; i++) {
              hiddenArticles[i].classList.remove("hidden");
          }

          // Hide the "Load More" button if all articles are visible
          if ([...articles].every(article => !article.classList.contains("hidden"))) {
              loadMoreBtn.style.display = "none";
          }
      });
  });
</script>

