{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      overflow: hidden;
      {% if section.settings.show_bg %}
        background-image: url('{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      {% endif %}
    }

    @media(max-width: 768px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
    #shopify-section-{{id}}{
      .wrapper-{{ id }}{
        display: grid;
        grid-template-columns: minmax(0,1fr) minmax(0,2.6fr);
        gap: var(--Spacing-Container-sm);
        @media(max-width: 768px){
          grid-template-columns: minmax(0,1fr);
        }        
      }
      .text-wrapper{
        display: flex;
        max-width: 410px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: var(--Spacing-Container-xxs, 8px);     
        @media(max-width: 600px){
          align-items: center;
        }
      }
      .subtitle{
        margin: 0;
        /* font-family: var(--font-family-Title, Krylon); */
        font-size: var(--Font-Size-Heading-H4, 20px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H4, 24px); /* 120% */
        letter-spacing: -0.4px;      
        {% if section.settings.show_bg %}
          color: var(--Content-Inverted-main, #F3F4F6);
        {% else %}
          color: var(--Content-Base-main, #1F2937);
        {% endif %}
      }
      .title{
        /* font-family: var(--font-family-Title, Krylon); */
        margin: 0;
        font-size: var(--Font-Size-Heading-H1, 48px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H1, 48px); /* 100% */
        /* letter-spacing: -0.4px;     */
        text-transform: capitalize;
        {% if section.settings.show_bg %}
          color: var(--Content-Inverted-main, #F3F4F6);
        {% else %}
          color: var(--Content-Base-main, #1F2937);
        {% endif %}
      }
      .description{
        margin: 0;
        /* font-family: var(--font-family-Body, "Aktiv Grotesk"); */
        font-size: var(--Font-Size-Paragraph-Regular, 16px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */  
        {% if section.settings.show_bg %}
          color: var(--Content-Inverted-main, #F3F4F6);
        {% else %}
          color: var(--Content-Base-main, #1F2937);
        {% endif %}
        @media(max-width: 600px){
          text-align: center;
        }
      }
      /* Swiper Navigation */
      .collection-list-wrapper{
        position: relative;
      }
      .swiper-button-next:after,
      .swiper-button-prev:after {
        content: 'none';
      }
      .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
        display: none!important;
      }
      #slider-next--{{ section.id }} {
        z-index: 1;
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        /* border-radius: var(--rounded-full, 999999px); */
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          right: 12px;
        {% else %}
          right: 0;
        {% endif %}
        @media(max-width: 768px){

        }
      }
      #slider-next--{{ section.id }} svg{
        width: 13px;
        height: 10px;
      }
     #slider-prev--{{ section.id }}{
        z-index: 1;
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        /* border-radius: var(--rounded-full, 999999px); */
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          left: 12px;
        {% else %}
          left: 0;
        {% endif %}
        @media(max-width: 768px){

        }
     }
     #slider-prev--{{ section.id }} svg{
        width: 20px;
        height: 20px;
     }
    .swiper:not(.swiper-initialized) .swiper-slide {
        max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
        margin-right: 16px;
        overflow: hidden;
        @media(max-width: 768px){
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
        }
    }
  }
</style>

<div class="sec-{{ id }} belongsToNav"  id ="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="text-wrapper">
        {% if section.settings.subtitle != blank %}
          <h4 class="subtitle">{{ section.settings.subtitle }}</h4>
        {% endif %}
        {% if section.settings.title != blank %}
          <h1 class="title">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.des != blank %}
          <p class="description">{{ section.settings.des }}</p>
        {% endif %}
      </div>
      <div class="collection-list-wrapper">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                {% render 'card-collection', block: block %}
              </div>
            {% endfor %}
          </div>
        </div>
        {% comment %} <div class="swiper-button-next" id="slider-next--{{ section.id }}">
          {% render 'all-icons', name: 'right_arrow' %}
        </div>
        <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
          {% render 'all-icons', name: 'left_arrow' %}
        </div> {% endcomment %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 2,
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 2,
        },
      }
      {% comment %} navigation: {
        nextEl: "#slider-next--{{ section.id }}",
        prevEl: "#slider-prev--{{ section.id }}",
      } {% endcomment %}
    });
  });
</script>

