    text-align: center;
    z-index: 2;
  }
  .banner__logo h2{
    margin: 0;
    color: #fff;
    font-size: 18px;
    line-height: 1.2;
  }
  .banner__logo img{
    max-width: 170px;
    height: auto;
    object-fit: cover;
  }
   .wrapper-{{ id }} .image-wrap video {
       display: block;
      width: 100%;
      object-fit: cover;
      height: 100%;
      min-height: -webkit-fill-available;
      @media(max-width: 600px){
        min-height: calc(100svh - 40px);
      }
    }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    object-fit: cover;
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
  }
  .wrapper-{{ id }} .image-wrap.adaptive img, .wrapper-{{ id }} .image-wrap.adaptive video {
    height: calc(100vh - 36px);
    /* object-fit: fill; */
    @media(max-width: 1280px) {
      height: 100vh;
    }
    @media(max-width: 600px) {
      height: calc(100svh - 36px);
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper  {
    position: absolute;
    width: 100%;
    height: 100%;
    /* padding: var(--Spacing-Container-xs); */
    top: 0;
    left: 50%;
    transform: translatex(-50%);
    box-sizing: border-box;
    @media(max-width: 600px) {
      padding: var(--Spacing-Container-sm) var(--Spacing-Container-sm) 80px 16px;
    }
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }
  .wrapper-{{ id }} .content__info {
    display: flex;
    flex-direction: column;
  }

