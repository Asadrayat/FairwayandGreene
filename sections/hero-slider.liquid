  }
  .autoplay-progress {
    display: none;
  }
  @media(min-width: 768px) {
    .wrapper-{{ id }} .content__wrapper.pagination__padding {
      padding-bottom: 36px;
    }
    .wrapper-{{ id }} .swiper-pagination {
      display: flex;
      /* padding: 0 12px; */
      justify-content: end;
      transform: translate(-50%, -2.5px);
      transform-origin: bottom;
      left: 50%;
    }
    .wrapper-{{ id }} {
      .swiper-pagination-bullet {
         width: 28px;
         height: 28px;
         border: 2px solid #f3f5f633;
         border-radius: 50%;
         margin: 0 4px;
         opacity: 1;
         transition: all 0.3s;
         color: #f3f5f6;
         z-index: 1;
         background: transparent;
          font-size: 12px;
          line-height: 200%;
      }
      .swiper-pagination-bullet.swiper-pagination-bullet-active {
        /* background: transparent; */
        /* color: transparent; */
        position: relative;
      }
      .autoplay-progress {
        position: absolute;
        right: 16px;
        bottom: 16px;
        z-index: 10;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #f3f5f6;
        box-sizing: border-box;        
      }
      .autoplay-progress svg {
        --progress: 0;
        position: absolute;
        left: -4px;
        top: -4px;
        z-index: 10;
        width: calc(100% + 8px);
        height: calc(100% + 8px);
        stroke-width: 2px;
        stroke: #f3f5f6;
        fill: none;
        stroke-dashoffset: calc(125.6px * (1 - var(--progress)));
        stroke-dasharray: 125.6;
        transform: rotate(-90deg);
      }
      .autoplay-progress span {
        color: transparent;
        font-size: 0;
        line-height: 0;
      }
    }
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
