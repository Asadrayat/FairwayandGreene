{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{ id }} {
    box-sizing: border-box;
    margin-top: {{ section.settings.margin_top | append: 'px' }};
    margin-bottom: {{ section.settings.margin_bottom | append: 'px' }};
    padding-top: {{ section.settings.padding_top | append: 'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
  }

  @media (max-width: 768px) {
    #shopify-section-{{ id }} {
      margin-top: {{ section.settings.margin_top_m | append: 'px' }};
      margin-bottom: {{ section.settings.margin_bottom_m | append: 'px' }};
      padding-top: {{ section.settings.padding_top_m | append: 'px' }};
      padding-bottom: {{ section.settings.padding_bottom_m | append: 'px' }};
    }
  }

  {% if section.settings.width != blank %}
    #shopify-section-{{ id }} .page-width {
      max-width: {{ section.settings.width | append: 'px' }};
    }
  {% endif %}

  .swiper-wrapper--{{ section.id }}.swiper-wrapper{
    transition-timing-function: linear !important;
  }

  .heading-{{ id }} {
    text-align: center;
    margin: 0 0 var(--Spacing-Container-xs);
  }
  .heading-{{ id }} p {
    color: var(--Color-Scheme-1-Text, #000);
    text-align: center;
    font-family: var(--font-family-Body);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0.96px;
    text-transform: uppercase;
    margin: 0;
    em{
      display: block;
      text-decoration: none;
      font-style: normal;      
    }
  }
  .items-{{ id }} {
    display: flex;
    align-items: center;
    overflow-x: auto;
    gap: 20px; /* Added for spacing between items */
  }
  .item-{{ id }}{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .item-{{ id }} img {
    display: block;
    max-width: 210px;
    height: auto;
  }

  @media screen and (max-width: 768px){
    .heading-{{ id }} {
      margin: 0 0 32px;
    }
    .heading-{{ id }} p {
      font-size: var(--Font-Size-Heading-H3);
      line-height: var(--Line-Height-Heading-H3); /* 120% */
      letter-spacing: -0.4px;
    }
    .item-{{ id }} img {
      max-width: 120px;
    }
  }

  .items-{{ id }}{
      display: none;
    }
  .sec-{{ id }} .swiper-slide {
   width: max-content;
  }
  .marquee-{{ id }}{
    display: block;
    @media(max-width: 768px){
      display: block;
    }
    img {
      height: 60px;
    }
    .swiper-slide{
      margin-block: auto;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.text != blank %}
        <div class="heading-{{ id }}">
          <p>{{ section.settings.text }}</p>
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        {% comment %}
          <div class="items-{{ id }}">
            {% for i in (1..50) %}
              {% for block in section.blocks %}
                <div class="item-{{ id }}">
                  {% if block.settings.image %}
                    {{
                      block.settings.image
                      | image_url: width: block.settings.image.width
                      | image_tag: loading: 'lazy', alt: block.settings.image.alt
                    }}
                  {% endif %}
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        {% endcomment %}

        <div class="swiper marqueeSwiper marquee-{{ id }}">
          <div class="swiper-wrapper swiper-wrapper--{{ section.id }}">
            {% for i in (1..100) %}
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% unless block.settings.image == blank %}
                    {{
                      block.settings.image
                      | image_url: width: block.settings.image.width
                      | image_tag: loading: 'lazy', alt: block.settings.image.alt
                    }}
                  {% endunless %}
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", e => {
    new Swiper(".marquee-{{ id }}", {
      slidesPerView: "auto",
      spaceBetween: 24,
      loop: true,
      speed: 5000,
      loop: true,
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
        pauseOnMouseEnter: true
      },
      allowTouchMove: true,
      breakpoints: {
        100:{
          spaceBetween: 24,
        },
        769:{
          spaceBetween: 24
        }
      }
    })
  })
</script>

{% schema %}
{
  "name": "Brands Section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "text",
      "id": "width",
      "label": "Width",
      "default": "1024"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands Section"
    }
  ]
}
{% endschema %}
