{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} table{
    border-radius: var(--rounded-lg, 8px);
    border-color: red;
  }
  .wrapper-{{ id }} h3 {
    color: var(--Text-primary, #000);
    font-family: var(--font-family-Title, Archivo);
    font-size: var(--Font-Size-Heading-H3, 24px);
    font-style: normal;
    font-weight: 500;
    line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */
    margin: 0 0 var(--Spacing-Container-md, 24px) 0;
  }
  .wrapper-{{ id }} .table--wrapper td{
    color: var(--Text-primary, #000);
    font-family: var(--font-family-Body, Archivo);
    font-size: var(--Font-Size-Paragraph-Regular, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    margin: 0;
    min-width: 240px;
    text-align: center;
    @media(max-width: 768px){
      min-width: unset;
    }
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="title--wrapper">
        <h3 class="section--title">{{ section.settings.title }}</h3>
      </div>
    <div class="table--wrapper">
      <table border="1">
      {% for block in section.blocks %}
        <tr class="row--{{ forloop.index }}">
            <td>{{ block.settings.item1 }}</td>
            <td>{{ block.settings.item2 }}</td>
            <td>{{ block.settings.item3 }}</td>
        </tr>
      {% endfor %}
      </table>
    </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Table",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
